{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:OCPP:Cp:2:2018:4:IdTokenType",
    "comment": "OCPP 2.0 - v1p0",
    "AdditionalInfoType": {
        "additionalProperties": true,
        "properties": {
            "additionalIdToken": {
                "type": "string",
                "maxLength": 36
            },
            "type": {
                "type": "string",
                "maxLength": 50
            }
        },
        "required": [
            "additionalIdToken",
            "type"
        ]
    },
    "IdTokenEnumType": {
        "type": "string",
        "additionalProperties": true,
        "enum": [
            "Central",
            "eMAID",
            "ISO14443",
            "KeyCode",
            "Local",
            "NoAuthorization",
            "ISO15693"
        ]
    },
    "IdTokenType": {
        "additionalProperties": true,
        "properties": {
            "additionalInfo": {
                "type": "array",
                "additionalItems": false,
                "items": {
                    "$ref": "#AdditionalInfoType"
                },
                "minItems": 1
            },
            "idToken": {
                "type": "string",
                "maxLength": 36
            },
            "type": {
                "$ref": "#IdTokenEnumType"
            }
        },
        "required": [
            "idToken",
            "type"
        ]
    }
}

